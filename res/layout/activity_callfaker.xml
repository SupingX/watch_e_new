<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/top"
        layout="@layout/top_layout" />
	<com.suping.i2_watch.view.DampingScrollView 
	    android:background="@color/grey_bg"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:scrollbars="none"
	    
	    >
	    <LinearLayout 
	        android:background="#fff"
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:orientation="vertical"
	        >
	        <View   android:layout_height="40dp"
  			    android:layout_width="match_parent"
  			    android:background="@color/grey_bg"
              />
	        
    <TextView
        android:background="@color/grey_bg"
        android:id="@+id/tv_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        style="@style/title_grey"
        android:text="@string/incoming_message" />

    <View style="@style/line" />

    <RelativeLayout
        android:id="@+id/rl_call"
        style="@style/itemlist"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
         >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/cursor_random" />

        <ImageView
            android:id="@+id/img_right_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/icon_right_arrow" />
    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/rl_test"
        style="@style/itemlist"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/test_vartual" />

        <ImageView
            android:id="@+id/img_right_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/icon_right_arrow" />
    </RelativeLayout>

    <View style="@style/line" />
</LinearLayout>
	    
	    
	</com.suping.i2_watch.view.DampingScrollView>
</LinearLayout>